<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ryanchan.handoffhelper">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.ryanchan.handoffhelper.create"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity"
            android:label="Register">
        </activity>

    <activity android:name=".MainActivity"
        android:launchMode="singleTop">

        </activity>

        <activity android:name=".AddPatient"
            android:label="@string/add_patient"
            android:parentActivityName=".MainActivity">

        </activity>
        
        <activity android:name=".PatientProfile"
            android:label="Patient Profile"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity android:name=".EditPatient"
            android:label="Edit Patient"
            android:parentActivityName=".PatientProfile">

        </activity>



        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
