<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="20dp"
        android:text="58 y.o. Male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AgeSex"
        android:gravity="center"/>

    <TextView
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/condition"
        android:textSize="35dp"
        android:text="Critical Condition: Head Trauma, Skull Fracture"
        android:gravity="center"
        android:paddingBottom="10dp"
        />

    <View
        android:layout_width="300dp"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center"/>
    <TextView
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testsOrdered"
        android:text="Ordered:\nCT Scan (Negative)\nUA (Positive)"
        android:textSize="20dp"
        android:paddingLeft="40dp"/>
    <View
        android:layout_width="200dp"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center"/>
    <TextView
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plan"
        android:textSize="35dp"
        android:text="Plan of Care:\n--------"
        android:gravity="center"
        android:paddingBottom="10dp"
        />





</LinearLayout>